{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8",
                "NODEP=1"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build w/ deps",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "-j8"
            ],
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./CrystalDust.gba",
            "args": [],
            "group": "test",
            "dependsOn": "build"
        }
    ]
}