script GoldenrodCity_GameCorner_EventScript_CoinClerk_BoughtCoins {
    updatemoneybox(0, 0)
    updatecoinsbox(0, 5)
    playse(SE_RG_SHOP)
    message("Thank you!\n"
            "Here are your coins.")
    waitmessage
    goto(GoldenrodCity_GameCorner_EventScript_CoinClerk_ShowChoice)
}

